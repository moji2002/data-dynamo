model Collection {
  id        Int      @id @default(autoincrement())
  title     String
  desc      String?
  // user      User?    @relation(fields: [userId], references: [id])
  // userId    Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Fields    Field[]
}

model Field {
  id           Int         @id @default(autoincrement())
  title        String
  methodName   String
  arguments    String?
  collection   Collection? @relation(fields: [collectionId], references: [id])
  collectionId Int?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}
